@model AccountVM

@{
    ViewData["Title"] = "Login";
}

<div>
    <p style="color:red">@TempData["CustomerNotFound"]</p>
</div>

<div class="d-flex justify-content-center align-items-center">
    <div class="col-md-8">
        <div class="card">
            <h4 class="card-header text-center">Solanis Hotel Giriş Ekranı</h4>
            <form asp-action="LogIn" method="post">
                <div class="card-body">

                    <div class="mb-3">
                        <label asp-for="CustomerDTO.Email" for="email" class="form-label">E-Posta</label>
                        <input asp-for="CustomerDTO.Email" type="email" id="email" class="form-control" />
                        <span asp-validation-for="CustomerDTO.Email" style="color:red"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CustomerDTO.Password" for="password" class="form-label">Şifre</label>
                        <input asp-for="CustomerDTO.Password" type="password" id="password" class="form-control" />
                        <span asp-validation-for="CustomerDTO.Password" style="color:red"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="col-md-5 btn btn-success btn-xl">Giriş Yap</button>
                    </div>

                </div>
            </form>
        </div>

        <div class="mt-3 text-center">
            <a href="#" class="alt-text">Kampanyalar</a>

            <a href="#" class="alt-text">Hakkımızda</a>
        </div>

    </div>
</div>

<style>
    .btn-xl {
        padding: 5px 15px;
        font-size: 18px;
        border-radius: 8px;
        width: 45%;
    }

    .alt-text {
        font-size: 18px;
    }
</style>